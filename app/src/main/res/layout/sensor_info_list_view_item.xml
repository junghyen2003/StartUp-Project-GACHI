<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/edit_text_style">

        <TextView
            android:text="입실/퇴실"
            android:layout_height="match_parent"
            android:id="@+id/sensor_info_list_item_check"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="30dp"
            android:background="@drawable/edit_text_style" />

        <TextView
            android:text="시간"
            android:layout_height="match_parent"
            android:id="@+id/sensor_info_list_item_time"
            android:layout_weight="2.53"
            android:gravity="center"
            android:background="@drawable/edit_text_style"
            android:layout_width="80dp" />

        <TextView
            android:text="입실 누적"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/sensor_info_list_item_incount"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/edit_text_style" />

        <TextView
            android:text="퇴실누적"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/sensor_info_list_item_outcount"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/edit_text_style" />

        <TextView
            android:text="현 인원"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/sensor_info_list_item_left_person"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/edit_text_style" />
    </LinearLayout>

</LinearLayout>